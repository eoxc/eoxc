<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">{{t 'Start full resolution download' }}</h4>
    </div>
    <div class="modal-body full-resolution-body">
      <form class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Bounding Box'}}</label>
          </div>
          <div class="col-sm-10">
            <div class="form-control input-group">
              <input type="number" step=0.01 class="form-control show-bbox input-sm" placeholder="Min-X" value="{{bbox.[0]}}">
              <span class="input-group-addon"> </span>
              <input type="number" step=0.01 class="form-control show-bbox input-sm" placeholder="Min-Y" value="{{bbox.[1]}}">
              <span class="input-group-addon"> </span>
              <input type="number" step=0.01 class="form-control show-bbox input-sm" placeholder="Max-X" value="{{bbox.[2]}}">
              <span class="input-group-addon"> </span>
              <input type="number" step=0.01 class="form-control show-bbox input-sm" placeholder="Max-Y" value="{{bbox.[3]}}">
              <span class="input-group-addon"> </span>
              <div class="input-group-btn">
                <button type="button" class="btn btn-default btn-draw-bbox">{{t 'Draw Bounding Box'}}</button>
              </div>
            </div>
          </div>
        </div>
        {{#if availableProjections.length}}
        <div class="form-group">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Projection'}}</label>
          </div>
          <div class="col-sm-10">
            <select class="form-control select-projection">
              <option>---</option>
              {{#each availableProjections}}
              <option value="{{this.identifier}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        {{/if}}
        {{#if availableDownloadFormats.length}}
        <div class="form-group">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Format'}}</label>
          </div>
          <div class="col-sm-10">
            <select class="form-control select-format">
              <option>---</option>
              {{#each availableDownloadFormats}}
              <option value="{{this.mimeType}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        {{/if}}
        {{#if interpolations}}
        <div class="form-group">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Interpolation'}}</label>
          </div>
          <div class="col-sm-10">
            <select class="form-control" name="interpolation">
              <option>---</option>
              {{#each interpolations}}
              <option value="{{this.identifier}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        {{/if}}

        <div class="form-group">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Scaling'}}</label>
          </div>
          <div class="col-sm-10">
            <div class="radio">
              <label>
                <input type="radio" name="scale-method" value="full" checked="checked">{{t 'Full size'}}
              </label>
            </div>
          </div>
        </div>

        <div class="form-group input-resolution">
          <div class="col-sm-offset-2 col-sm-4">
            <div class="radio">
              <label>
                <input type="radio" name="scale-method" value="resolution"><span>{{t 'Resolution'}} <small>({{t 'In decimal degrees'}})</small></span>
              </label>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="input-group">
              <input type="number" class="form-control input-sm" placeholder="{{t 'Resolution'}} X" name="resolution-x" value="{{resolutionX}}" step="0.0001" min="0.0001">
              <span class="input-group-addon">-</span>
              <input type="number" class="form-control input-sm" placeholder="{{t 'Resolution'}} Y" name="resolution-y" value="{{resolutionY}}" step="0.0001" min="0.0001">
            </div>
          </div>
        </div>

        <div class="form-group input-size">
          <div class="col-sm-offset-2 col-sm-4">
            <div class="radio">
              <label>
                <input type="radio" name="scale-method" value="size"><span>{{t 'Size'}} <small>({{t 'In pixels'}})</small></span>
              </label>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="input-group">
              <input type="number" class="form-control input-sm" placeholder="{{t 'Size'}} X" name="size-x" value="{{sizeX}}" step="1" min="1" disabled="disabled">
              <span class="input-group-addon">-</span>
              <input type="number" class="form-control input-sm" placeholder="{{t 'Size'}} Y" name="size-y" value="{{sizeY}}" step="1" min="1" disabled="disabled">
            </div>
          </div>
        </div>

        <div class="form-group input-scale">
          <div class="col-sm-offset-2 col-sm-4">
            <div class="radio">
              <label>
                <input type="radio" name="scale-method" value="scale"><span>{{t 'Scale'}} <small>({{t 'Of total size'}})</small></span>
              </label>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="input-group">
              <input type="number" class="form-control input-sm" placeholder="{{t 'Scale'}}" name="scalefactor" value="100" step="1" min="0" max="500" disabled="disabled">
              <div class="input-group-addon">%</div>
            </div>
          </div>
        </div>

        {{#if fields}}
        <div class="form-group input-fields">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Bands'}}</label>
          </div>
          <div class="col-sm-10">
            {{#each fields}}
              <div autocomplete="off" class="checkbox-inline">
                <label>
                  <input type="checkbox" name="field" value="{{this.identifier}}"> {{this.name}}
                </label>
              </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
      </form>
      <div class="size-warning alert alert-danger">
        {{t 'download_size_warning' }}
      </div>
      <div class="bbox-warning alert alert-danger">
        {{t 'max_bbox_warning' }}
      </div>
      <div class="bands-warning alert alert-danger">
        {{t 'download_bands_warning' }}
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'Close' }}</button>
      <button type="button" class="btn btn-default start-download" data-dismiss="modal">{{t 'Download' }}</button>
    </div>
  </div>
</div>
